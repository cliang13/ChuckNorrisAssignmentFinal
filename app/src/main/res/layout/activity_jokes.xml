<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/test"
    tools:context=".jokesActivity">

    <Button
        android:id="@+id/btnJoke"
        android:layout_width="173dp"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="96dp"
        android:background="#7E3815"
        android:text="@string/joke"
        android:textColor="#E09B5B"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textCreatedAt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textValue" />

    <ImageView
        android:id="@+id/imageIcon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center_vertical"

        android:layout_marginBottom="73dp"
        android:layout_marginLeft="76dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="167dp"
        app:layout_constraintBottom_toTopOf="@+id/textValue"
        app:layout_constraintStart_toStartOf="@+id/textValue"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/cowboy" />

    <TextView
        android:id="@+id/textCreatedAt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textValue"
        android:layout_marginBottom="38dp"
        android:textColor="#FFFFFF"
        android:textSize="14dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnJoke" />

    <TextView
        android:id="@+id/textValue"
        android:layout_width="253dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="93dp"
        android:layout_marginEnd="54dp"
        android:layout_marginLeft="54dp"
        android:layout_marginRight="54dp"
        android:layout_marginStart="54dp"
        android:gravity="center_horizontal"
        android:text="Carefully curated for all your joke needs!"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#D78949"
        android:textColorHighlight="#E80F80"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/btnJoke"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageIcon" />
</androidx.constraintlayout.widget.ConstraintLayout>